{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pmt/main/features/side-nav": [
        "packages/libs/main/features/side-nav/src/index.ts"
      ],
      "@pmt/main/features/top-bar": [
        "packages/libs/main/features/top-bar/src/index.ts"
      ],
      "@pmt/main/layouts/app": ["packages/libs/main/layouts/app/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
